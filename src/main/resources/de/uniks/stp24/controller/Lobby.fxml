<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.uniks.stp24.controller.LobbyController">
    <center>
        <VBox fx:id="viewBox" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
              minWidth="-Infinity" styleClass="container,overlay-container">
            <children>
                <ListView fx:id="userList" styleClass="overlay-container"/>
                <Button fx:id="joinButton" mnemonicParsing="false" onAction="#join" text="join game"/>
            </children>
        </VBox>
    </center>
</BorderPane>
